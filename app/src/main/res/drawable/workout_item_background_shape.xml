<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient stroke layer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/workout_stroke_gradient_start"
                android:endColor="@color/workout_stroke_gradient_end"
                android:angle="300"/>

            <corners android:radius="133px"/>

            <!-- Stroke-like padding to position the gradient outside the solid layer -->
            <padding android:left="5dp" android:top="5dp"
                android:right="5dp" android:bottom="5dp"/>
        </shape>
    </item>

    <!-- Background layer with solid white color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="133px"/>
        </shape>
    </item>

</layer-list>
