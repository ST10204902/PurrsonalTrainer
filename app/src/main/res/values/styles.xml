<resources>
    <style name="SpinnerText" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/knicknack_medium</item>
        <item name="android:textColor">@color/hint_text</item>
    </style>

    <style name="SpinnerDropdownText" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/knicknack_medium</item>
        <item name="android:textColor">@color/hint_text</item>
    </style>

    <style name="CustomMaterialDatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarTheme">@style/CalendarTheme</item>
    </style>

    <style name="CalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">#1D98BA</item> <!-- Provided Shade -->
        <item name="colorPrimaryVariant">#0E7490</item> <!-- Teal Blue -->
        <item name="colorOnPrimary">#B2F0FF</item> <!-- Provided Shade -->
        <item name="colorSecondary">@color/white</item> <!-- Dark Teal -->
        <item name="colorSecondaryVariant">#65CBD0</item> <!-- Provided Shade -->
        <item name="colorOnSecondary">#E0F7FA</item> <!-- Very Light Teal -->
        <item name="colorSurface">@color/white</item> <!-- Lightest Teal -->
        <item name="colorOnSurface">#65CBD0</item>
        <item name="colorError">#FFCDD2</item>
        <item name="colorOnError">#D32F2F</item>
        <item name="fontFamily">@font/knicknack_medium</item>
    </style>
</resources>
