<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cardCornerRadius="25dp"
        android:background="@color/olive_green">

        <LinearLayout
            android:id="@+id/navItemLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/soft_lime_green"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/navItemIcon"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/home_icon"
                app:tint="@color/olive_green"/>

            <TextView
                android:id="@+id/navItemLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginStart="10dp"
                android:text="home"
                android:textSize="20sp"
                android:fontFamily="@font/rounded"
                android:textColor="@color/olive_green" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>