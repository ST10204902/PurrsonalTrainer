<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/shineEffect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/svg_bblbtn_shine"
        android:scaleType="fitXY"
        android:contentDescription="Shine effect"
        android:elevation="10dp"
        android:padding="25dp"
        app:layout_constraintTop_toTopOf="@id/loginButton"
        app:layout_constraintBottom_toBottomOf="@id/loginButton"
        app:layout_constraintStart_toStartOf="@id/loginButton"
        app:layout_constraintEnd_toEndOf="@id/loginButton" />

    <za.co.varsitycollege.st10204902.purrsonaltrainer.frontend_logic.BubbleButton
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bblbtn_combined"
        android:fontFamily="@font/knicknack_medium"
        android:paddingVertical="22dp"
        android:paddingLeft="75dp"
        android:paddingRight="75dp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textAllCaps="false"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
