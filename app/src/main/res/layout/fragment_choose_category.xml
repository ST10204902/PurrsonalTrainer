<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.fragments.ChooseCategoryFragment"
    android:background="@drawable/login_popup">

    <EditText
        android:id="@+id/searchInput"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Search"
        android:background="@drawable/userinput_design"
        android:textSize="25sp"
        android:paddingVertical="28dp"
        android:paddingStart="80dp"
        android:fontFamily="@font/rounded"
        android:textColor="@color/hint_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ico_search"
        app:layout_constraintStart_toStartOf="@+id/searchInput"
        android:layout_marginStart="35dp"
        app:layout_constraintTop_toTopOf="@+id/searchInput"
        app:layout_constraintBottom_toBottomOf="@+id/searchInput" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/searchInput"
        app:layout_constraintBottom_toTopOf="@id/addCategoryButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/component_category_list"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addCategoryButton"
        android:layout_width="360dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_start_workout_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Category"
        android:fontFamily="@font/rounded"
        android:textSize="25sp"
        android:textColor="#CCCACA"
        android:layout_gravity="center"
        android:layout_marginStart="65dp"
        app:layout_constraintTop_toTopOf="@+id/addCategoryButton"
        app:layout_constraintBottom_toBottomOf="@+id/addCategoryButton"
        app:layout_constraintStart_toStartOf="@+id/addCategoryButton"
        android:elevation="5dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/addCategoryButton"
        app:layout_constraintBottom_toBottomOf="@+id/addCategoryButton"
        app:layout_constraintStart_toStartOf="@+id/addCategoryButton"
        android:src="@drawable/isco_add"
        android:layout_marginStart="35dp"
        android:elevation="5dp" />
</androidx.constraintlayout.widget.ConstraintLayout>